<Window x:Class="D8_porting_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D8_porting_WPF"
        mc:Ignorable="d"
        Title="Sceneriet" Height="400" Width="600" KeyUp="ApplicationKeyPress">
    <Grid>
        <TextBlock x:Name="Title" Height="27" Margin="10,10,0,0" Text="Title" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontFamily="Lucida Console"/>
        <TextBlock x:Name="Text" Margin="10,40,100,15" Text="Text" Width="300" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="16" FontFamily="Lucida Console"/>

        <TextBlock x:Name="KeyPressDisplay" HorizontalAlignment="Stretch" Margin="0,30,0,0" TextWrapping="Wrap" Text="Keypress:" VerticalAlignment="Bottom" FontFamily="Lucida Console"/>
    </Grid>
</Window>
